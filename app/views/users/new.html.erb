<!-- app/views/users/new.html.erb -->

<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h1 class="card-title text-center mb-4">Register</h1>
          <%= form_with(model: @user, url: users_path, method: 'post') do |f| %>
            <div class="mb-3">
              <%= f.label :email, class: "form-label" %>
              <%= f.email_field :email, class: "form-control" %>
            </div>
    
            <div class="mb-3">
              <%= f.label :password, class: "form-label" %>
              <%= f.password_field :password, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= f.label :password_confirmation, class: "form-label" %>
              <%= f.password_field :password_confirmation, class: "form-control" %>
            </div>
    
            <div class="row">
              <div class="col-12 col-md-6">
                <%= f.submit 'Register', class: 'btn btn-primary btn-lg btn-block', style: 'width: 100%' %>
              </div>
              <div class="col-12 col-md-6">
                <%= link_to 'Login', new_session_path, class: 'btn btn-secondary btn-lg btn-block', style: 'width: 100%' %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
